<% unless @donation.nil? %>
  <h1>Showing Donation #<%= @donation['id'] %></h1>
  <h3>Recipient: <%= @donation['recipient_name'] %></h3>
  <p>Email: <%= @donation['recipient_email'] %></p>
  <h3>Donor: <%= @donation['donor_name'] %></h3>
  <p>Email: <%= @donation['donor_email'] %></p>
<% else %>
  <h1>No Donation</h1>
<% end %>
